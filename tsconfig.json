{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    /* JavaScript Support */
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"]
  },
  "include": ["./src/**/*.ts"]
}
